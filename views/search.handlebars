<form id="search-form" action="/albumsearch" method="POST"> 
    <label for="searchInput"> Search Album: </label>
    <input type="text" name="searchInput" id="searchInput" placeholder="Search...">
    <button type="submit">Search</button>
</form>
<ul class="search-results">
    {{#each albumresults}}
    <li><a href="/album/{{this}}">{{this}}</a></li>
    {{/each}}
</ul>
