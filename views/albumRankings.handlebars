<div id="album-rankings">
  <h2>Album Rankings: {{albumName}}</h2>

  {{#if rankings.length}}
    <ul>
      {{#each rankings}}
        <li>
          <strong>{{userName}}</strong>
          <p>Rating: {{rating}}</p>
          {{#if review_provided}}
            <p>Review: {{review}}</p>
          {{else}}
            <p>No review provided</p>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No rankings yet. Be the first to add one!</p>
  {{/if}}
  </form>
</div>
